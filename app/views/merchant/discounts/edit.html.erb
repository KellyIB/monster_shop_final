<h2>Edit Discount</h2>

<%= form_tag "/merchant/discounts/#{@discount.id}", method: :patch do %>
  <%= label_tag :percent_off %>
  <%= number_field_tag :percent_off, (@discount.percent_off.to_f if @discount), step: 0.5 %>

  <%= label_tag :quantity_threshold %>
  <%= number_field_tag :quantity_threshold, (@discount.quantity_threshold if @discount) %>

  <%= label_tag :status %>
  <p>Please choose: active or inactive </p>
  <%= text_field_tag :status, (@discount.status if @discount) %>

  <%= submit_tag 'Update Discount' %>
<% end %>
