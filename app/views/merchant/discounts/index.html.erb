<h1>My Discounts</h1><br>
<section class="discounts">
  <% @discounts.each do |discount| %>
    <section id="discount-<%= discount.id %>">
      <%= link_to discount.id, "/merchant/discounts/#{discount.id}" %>
      <p> Percent off: <%= discount.percent_off %> </p>
      <p> Quantity Threshold: <%= discount.quantity_threshold %> </p>
      <p> Status: <%= discount.status %> </p>
      <p> Created on: <%= discount.created_at %> </p>
      <% if discount.has_not_been_used(discount.id) %>
        <%= button_to "Delete Discount", "/merchant/discounts/#{discount.id}", method: :delete %>
      <% end %>
    </section><br>
  <% end %>
  <%= link_to "Create New Discount", "/merchant/discounts/new" %>

</section>
