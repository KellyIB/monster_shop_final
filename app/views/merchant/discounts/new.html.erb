<h2>Create Discount</h2>

<%= form_tag "/merchant/discounts/new" do %>
  <%= label_tag :percent_off %>
  <%= text_field_tag :percent_off, (@discount.percent_off.to_f if @discount) %>

  <%= label_tag :quantity_threshold %>
  <%= text_field_tag :quantity_threshold, (@discount.quantity_threshold if @discount) %>

  <%= label_tag :status %>
  <p>Please choose: active or inactive </p>
  <%= text_field_tag :status, (@discount.status if @discount) %>

  <%= submit_tag 'Save Discount' %>
<% end %>
